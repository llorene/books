    <tr>
      <th scope="col">Title</th>
      <th scope="col">Resume</th>
      <th scope="col">Pages</th>
    </tr>
  </thead>

  <tbody>
  <% @author.books.each do |book| %>
    <tr>
     <td> <%= book.title %></td>
